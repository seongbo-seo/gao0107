<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreSignUp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여기는 가게 등록 페이지 입니다.">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상호명"/>
    <EditText
        android:id="@+id/store_name_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="이디야 안암점"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소"/>
    <EditText
        android:id="@+id/store_address_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="서울시 화랑로 22다길 20 "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운영시간"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/store_starttime_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:hint="시작시간 "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"/>
        <EditText
            android:id="@+id/store_endtime_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="마감시간"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화번호"/>
    <EditText
        android:id="@+id/store_phone_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="0212345678"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사업자번호"/>
    <EditText
        android:id="@+id/store_number_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="12-123123-2323"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="대분류"/>
    <EditText
        android:id="@+id/store_dae_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="서비스업"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중분류"/>
    <EditText
        android:id="@+id/store_joong_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="미용실"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사진등록"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <ImageView
            android:id="@+id/image_1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_defaultimage"
            />
        <ImageView
            android:id="@+id/image_2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_defaultimage"
            />
        <ImageView
            android:id="@+id/image_3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_defaultimage"
            />
    </LinearLayout>
    <Button
        android:id="@+id/business_singup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사업자 전환 등록"
        />
    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="돌아가기"/>


</LinearLayout>